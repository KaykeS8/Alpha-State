<header class="bg-brand-100 p-4 shadow-sm">
    <div class="container flex justify-between">
        <div class="flex gap-5 items-center">
            <div class="font-serif text-3xl font-medium w-full">Alpha State</div>
            <form class="flex items-center border border-gray-300 rounded-full px-3 py-2 w-full bg-brand-200 overflow-hidden max-lg:hidden">
                <%= image_tag 'search.svg', class: "w-5 h-5 text-gray-500 mr-2" %>
                <input type="text" placeholder="Search" class="outline-none  bg-brand-200 text-gray-800">
            </form>
        </div>
        <div class="flex items-center gap-2 max-sm:hidden">
            <%= link_to 'Login', '', class: 'border border-brand-400 px-4 py-2 rounded-xl hover:bg-brand-400 hover:text-brand-100 transition-all duration-300' %>
            <%= link_to 'Sign up', '', class: "bg-brand-400 font-medium text-brand-100 px-4 py-2 rounded-xl hover:ring-1 hover:ring-brand-400 transition-all duration-300" %>
        </div>
         <button class="flex items-center gap-3 neon text-verde-900 py-2 px-4 sm:hidden" id="mobile-button">
            Menu
            <span class="h-3 w-4 flex flex-col justify-between *:h-0.5 *:rounded-md *:bg-brand-400">
                <span></span>
                <span></span>
                <span></span>
            </span>
        </button>
    </div>
</header>