<div class="space-y-12 my-10">
  <% @last_two_articles.each do |article| %>
    <article class="flex gap-8 justify-between items-center max-sm:flex-col">
      <div class="flex-1">
        <h3 class="font-bold text-2xl mb-3 text-gray-800 hover:text-brand-400 transition-colors">
          <%= link_to article.title, article_path(article) %>
        </h3>
        <p class="text-brand-300 mb-6 leading-relaxed"><%= article.content.body.to_plain_text.truncate(100) %></p>
        <div class="flex justify-between items-center">
          <div class="flex gap-3">
            <button class="flex items-center gap-1 hover:text-brand-400 transition-colors">
              <%= image_tag 'heart.svg', class: 'w-5 h-5' %>
            </button>
            <button class="flex items-center gap-1 hover:text-brand-400 transition-colors">
              <%= image_tag 'chat.svg', class: 'w-5 h-5' %>
            </button>
          </div>
          <button class="hover:scale-110 transition-transform">
            <%= image_tag 'save.svg', class: 'w-5 h-5' %>
          </button>
        </div>
      </div>
      <div class="w-80 h-48 flex-shrink-0 overflow-hidden max-sm:w-full">
        <% if article.cover.present? %>
          <%= image_tag(article.cover, class: 'w-full h-full object-cover rounded-lg shadow-md hover:scale-105 transition-transform duration-300') %>
        <% else %>
          <%= image_tag('default_cover.png', class: 'w-full h-full object-cover rounded-lg shadow-md') %>
        <% end %>
      </div>
    </article>
  <% end %>
</div>