<div class="flex justify-center items-center flex-col">
  <div class="mb-3">
    <h2 class="text-4xl font-medium font-sans text-center mb-6">Sign up</h2>
    <p class="mb-8 text-center">Lorem ipsum dolor sit amet adipiscing elit.</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mb-4">
        <%= f.label :username, 'username*', class: 'text-sm text-brand-300 mb-1' %></br>
        <%= f.text_field :username, autofocus: true, class: 'w-full py-2 px-1 rounded-md border border-brand-300 focus:bg-brand-200'%>
      </div>

      <div class="field mb-4">
        <%= f.label :email, class: "text-sm text-brand-300 mb-1" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full py-2 px-1 rounded-md border border-brand-300 focus:bg-brand-200' %>
      </div>

      <div class="field mb-4">
        <%= f.label :password,class: "text-sm text-brand-300 mb-1" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password",class: 'w-full py-2 px-1 rounded-md border border-brand-300 focus:bg-brand-200' %>
      </div>

      <div class="field mb-4">
        <%= f.label :password_confirmation, class: "text-sm text-brand-300 mb-1" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class: 'w-full py-2 px-1 rounded-md border border-brand-300 focus:bg-brand-200' %>
      </div>

      <div class="actions text-center">
        <%= f.submit "Sign up", class: 'w-full bg-brand-300 text-brand-100 py-2 rounded-md cursor-pointer hover:bg-brand-400 transition-all duration-300'%>
      </div>
    <% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>

